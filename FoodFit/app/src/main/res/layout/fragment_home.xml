<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="50dp"
    android:background="#eaeaea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout

    android:layout_width="match_parent"
    android:weightSum="3"
    android:background="#eaeaea"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress1"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="170dp"

            custom:arc_bottom_text_size="30dp" />


        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress2"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            custom:arc_bottom_text_size="15dp"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="170dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#eaeaea"
        android:weightSum="2"

        android:layout_width="match_parent"
        android:layout_height="180dp">


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="190dp"
            android:layout_height="180dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView

                    android:text="Break Fast"
                    android:src="@drawable/runner"
                    android:gravity="center"
                    android:id="@+id/info_text1"
                    android:padding="20dp"
                    android:background="@drawable/radiusimage"
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"

                    />

                <TextView
                    android:text="Fitness"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_weight="1"
            card_view:contentPaddingBottom="9dp"
            android:layout_gravity="center"
            android:layout_width="190dp"
            android:layout_height="180dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
